@using PadelMatcherNet.Models
@using PadelMatcherNet.Components.Partials.Matches
@using PadelMatcherNet.Services
@using PadelMatcherNet.Components.Partials

<MudPaper Class="pa-3 mb-4">
    <MudGrid>
        <MudItem xs="12" sm="6">
            <MudText Typo="Typo.subtitle1">Azioni Rapide</MudText>
        </MudItem>
        <MudItem xs="12" sm="6" Class="text-right">
            @if (HasPendingMatches)
            {
                <MudButton Variant="Variant.Text" 
                          Color="Color.Warning" 
                          StartIcon="@Icons.Material.Filled.Clear"
                          OnClick="OnClearPending">
                    Cancella Partite Pendenti
                </MudButton>
            }
            <MudButton Variant="Variant.Text" 
                      Color="Color.Info" 
                      StartIcon="@Icons.Material.Filled.Calculate"
                      OnClick="OnRecalculate">
                Ricalcola Statistiche
            </MudButton>
        </MudItem>
    </MudGrid>
</MudPaper>

@code {
    [Parameter] public bool HasPendingMatches { get; set; }
    [Parameter] public EventCallback OnClearPending { get; set; }
    [Parameter] public EventCallback OnRecalculate { get; set; }
}