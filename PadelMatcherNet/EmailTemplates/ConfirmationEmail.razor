@using PadelMatcherNet.EmailTemplates.Components
@layout EmailLayout

<EmailHeader Title="Conferma il tuo account" Subtitle="Un ultimo passo prima di iniziare!" />

<EmailMessage>
    <p>Ciao <strong>@Name</strong>,</p>

    <p>Per completare la registrazione su <strong>BlazorX</strong>, ti chiediamo di confermare il tuo indirizzo email cliccando sul pulsante qui sotto:</p>

    <EmailButton Href="@ConfirmationLink" Text="Conferma il mio account" />

    <p>Se non hai richiesto questa registrazione, puoi ignorare questa email.</p>

    <p>A presto!<br /><em>Il team di BlazorX</em></p>
</EmailMessage>

<EmailFooter />

@code {
    [Parameter] public string Name { get; set; } = "Utente";
    [Parameter] public string ConfirmationLink { get; set; } = "#";
}
