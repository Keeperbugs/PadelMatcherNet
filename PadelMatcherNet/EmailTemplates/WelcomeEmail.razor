@using PadelMatcherNet.EmailTemplates.Components
@layout EmailLayout

<EmailHeader Title="Benvenuto!" Subtitle="Crea il tuo torneo di padel personalizzato." />

<EmailMessage>
    <p>Ciao <strong>@Name</strong>,</p>
    <p>Grazie per esserti registrato su <strong>PadelMatcher.net</strong>. Crea i tuoi tornei di padel in modo facile e intuitivo. </p>

    <EmailButton Href="https://www.padelmatcher.net" Text="Inizia subito" />

    <p>Se hai bisogno di aiuto, puoi rispondere direttamente a questa email.</p>
    <p>A presto!<br /><em>Il team di PadelMatcher.net</em></p>
</EmailMessage>

<EmailFooter />

@code {
    [Parameter] public string Name { get; set; } = "Giocatore";
}
