@using PadelMatcherNet.EmailTemplates.Components
@layout EmailLayout

<EmailHeader Title="Reimposta la tua password" Subtitle="Segui le istruzioni per reimpostare la tua password." />

<EmailMessage>
    <p>Ciao <strong>@Name</strong>,</p>
    <p>Abbiamo ricevuto una richiesta per reimpostare la tua password. Puoi farlo cliccando sul link qui sotto:</p>

    <EmailButton Href="@ResetLink" Text="Reimposta la tua password" />

    <p>Se non hai richiesto una reimpostazione della password, ignora questa email.</p>
    <p>Grazie,<br /><em>Il team di PadelMatcher.net</em></p>
</EmailMessage>

<EmailFooter />

@code {
    [Parameter] public string Name { get; set; } = string.Empty;
    [Parameter] public string ResetLink { get; set; } = string.Empty;
}